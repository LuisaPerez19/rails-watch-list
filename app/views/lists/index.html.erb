
<div class="cover mb-4">

  <div id = "banner" class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://i.insider.com/5a256d413dbef48d0e8b9b4f?width=800&format=jpeg&auto=webp')">
    Save any kind of movie
  </div>

  <div>

    <%= cl_image_tag("jwjgk5q2iewjgvmo1yds",
      width: 400, height: 300, crop: :fill) %>

    <%= cl_image_tag("kznw2tx2kntj8wilvugw",
      width: 400, height: 300, crop: :fill) %>

  </div>

</div>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-success" %>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <%= link_to list_path(list), class:"text-decoration-none" do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('list_background.jpg') %>)">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
